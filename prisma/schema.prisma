generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String // MediumText may be needed for MySql
  expiresAt DateTime
}

model User {
  id       Int     @id @default(autoincrement())
  email    String? @unique
  name     String?
  username String
  password String
}

model Game {
  id         Int         @id
  title      String
  checklists Checklist[]
}

model Checklist {
  id             Int             @id
  title          String
  game           Game            @relation(fields: [gameId], references: [id])
  gameId         Int
  checklistItems ChecklistItem[]
}

model ChecklistItem {
  id          Int       @id
  title       String
  checklist   Checklist @relation(fields: [checklistId], references: [id])
  checklistId Int
}
