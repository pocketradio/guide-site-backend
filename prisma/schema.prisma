generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String // MediumText may be needed for MySql
  expiresAt DateTime
}

model User {
  id       Int     @id @default(autoincrement())
  email    String? @unique
  name     String?
  username String
  password String
}

model Game {
  id         Int         @id @default(autoincrement())
  title      String      @unique
  checklists Checklist[]
  tags       Tag[]
  pages      Page[]
  slug       String?
  navbar     Json?
}

model Checklist {
  id             Int             @id @default(autoincrement())
  title          String
  game           Game            @relation(fields: [gameId], references: [id])
  gameId         Int
  checklistItems ChecklistItem[]
  configuration  String? // The layout of the checklist, e.g. "Flea Hunting Checklist" to be read by the frontend

  @@unique([gameId, title])
}

model ChecklistItem {
  id          Int       @id @default(autoincrement())
  title       String
  checklist   Checklist @relation(fields: [checklistId], references: [id])
  checklistId Int
  imageOne    String?
  imageTwo    String?
  description String?
  tags        Tag[]

  @@unique([checklistId, title])
}

model Tag {
  id             Int             @id @default(autoincrement())
  title          String          @unique
  checklistItems ChecklistItem[]
  games          Game[]
}

model Page {
  id     Int     @id @default(autoincrement())
  title  String
  blocks Block[]
  game   Game    @relation(fields: [gameId], references: [id])
  gameId Int
}

model Block {
  id      Int   @id @default(autoincrement())
  page    Page  @relation(fields: [pageId], references: [id])
  pageId  Int
  content Json?
  order   Int?
}
